<section id="features">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2 class="section-heading"><%= @content['titles']['features'] %></h2>
				<hr class="primary">
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">

			<% @features.each do |feature| %>
				<div class="col-lg-3 col-md-6 text-center">
					<div class="service-box">
						<i class="wow slideInDown fa fa-4x <%= feature['graphic'] %> text-primary"></i>
						<h3><%= feature['name'] %></h3>
						<p class="text-muted"><%= feature['tagline'] %></p>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</section>