<!DOCTYPE html>
<html>
<head>
	<title>Cog</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
	<%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="padding:0;border-radius:0;margin:0">
	<div class="collapse navbar-collapse">
		<div class="container-fluid">
			<ul class="nav navbar-nav navbar-left">
				<li>
					<a href="#" id="menu-toggle">
						<span class="glyphicon glyphicon-th-large"></span>
					</a>
				</li>
				<li>
					<a href="/">
						<img src="/img/cog/logo.gif" class="img-responsive" alt="" width="100px" height="50px">
					</a>
				</li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to current_user.email, '#' %></li>
			</ul>
		</div>
	</div>
</nav>


<div id="wrapper" style="padding-top: 55px;">
	<div id="sidebar-wrapper">
		<ul class="sidebar-nav">
			<li>
				<%= link_to 'Blog', '/blog' %>
			</li>
			<li>
				<%= link_to 'Dashboard', admin_dashboard_path %>
			</li>
			<li>
				<%= link_to 'Articles', admin_articles_path %>
			</li>
		</ul>
	</div>


	<div id="page-content-wrapper">
		<div class="container-fluid">
			<div class="row">
				<%= yield %>
			</div>
		</div>
	</div>
</div>
<script>
	$("#menu-toggle").click(function(e) {
		e.preventDefault();
		$("#wrapper").toggleClass("toggled");
	});
</script>
</body>
